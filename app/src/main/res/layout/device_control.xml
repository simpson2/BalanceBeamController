<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceControlAnalysis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connected_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/connected_address"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#FF0000"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/FanPowerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fan power"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
        <SeekBar
            android:id="@+id/FanPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FanPowerText"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>